pipeline {
    agent any

    environment {
        VIRTUAL_ENV = 'venv'
    }

    stages {
        stage('Setup') {
            steps {
                script {
                    // Create virtual env if it doesn't exist
                    if (!fileExists("${env.WORKSPACE}/${VIRTUAL_ENV}")) {
                        sh "python -m venv ${VIRTUAL_ENV}"
                    }

                    // Activate venv and install dependencies
                    sh """
                        . ${VIRTUAL_ENV}/bin/activate
                        pip install --upgrade pip
                        pip install -r requirements.txt
                    """
                }
            }
        }

        stage('Lint') {
            steps {
                script {
                    sh """
                        . ${VIRTUAL_ENV}/bin/activate
                        flake8 app.py
                    """
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    sh """
                        . ${VIRTUAL_ENV}/bin/activate
                        pytest
                    """
                }
            }
        }

        stage('Coverage') {
            steps {
                script {
                    sh """
                        . ${VIRTUAL_ENV}/bin/activate
                        coverage erase
                        coverage run -m pytest
                        coverage report -m
                    """
                }
            }
        }

	stage('Security Scan') {
	    steps {
		script {
		    sh """
		        . ${VIRTUAL_ENV}/bin/activate
		        bandit -r app.py tests
		    """
		}
	    }
	}

        stage('Deploy') {
            steps {
                script {
                    // Simple local "deployment" example:
                    // copy the app into a deploy directory and run it
                    sh """
                        . ${VIRTUAL_ENV}/bin/activate
                        mkdir -p deploy
                        cp app.py deploy/
                        echo "Starting application from deploy/app.py"
                        python deploy/app.py
                    """
                }
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}

